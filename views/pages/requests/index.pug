extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/formChangeMulti.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug
include ../../mixins/moment.pug

block main 
    +alert-success(5000)
    +alert-error(5000)
    
    h1 Quản lý đơn hàng

    .card.mb-3 
        .card-header Bộ lọc và Tìm kiếm 
        .card-body 
            .row 
                .col-6
                    //- +filter-status(filterStatus)
                .col-6  
                    //- +search(keyword)

    .card.mb-3 
        .card-header Sắp xếp theo 
        .card-body 
            .row 
                .col-4 
                    div(sort)
                        select(
                            class="form-control"
                            name="sort"
                            sort-select 
                        )   
                            option(value="staff_id-asc") CMND tăng dần
                            option(value="staff_id-desc") CMND giảm dần
                            option(value="fullName-asc") Tên tăng dần
                            option(value="fullName-desc") Tên giảm dần

                        button(
                            class="btn btn-danger mt-2"
                            sort-clear
                        ) Clear
    
    .card.mb-3 
        .card-header Đơn hàng cần xử lý
        .card-body 
            .row
                .col-8
                    +form-change-multi(`${prefixAdmin}/staffs/change-multi?_method=PATCH`)
                .col-4 
                    a(
                        href=`${prefixAdmin}/requests/create`
                        class="btn btn-outline-success"
                    ) +Thêm mới
            
            table(
                    class="table table-hover table-sm"
                    checkbox-multi
                ) 
                    thead 
                        tr 
                            th  
                                input(type="checkbox" name="checkall")
                            th STT
                            th SĐT
                            th Loại yêu cầu
                            th Địa chỉ
                            th Trạng thái
                            th Ngày đặt yêu cầu
                            th Tổng chi phí
                            th Hoạt động
                    tbody
                        each item, index in processingRequest
                            tr 
                                td 
                                    input(type="checkbox" name="id" value=item.id)
                                td #{index + 1}
                                td #{item.customerInfo.phone}
                                if (item.requestType == "shortTerm")
                                    td Ngắn hạn 
                                else 
                                    td Dài hạn
                                td #{item.customerInfo.address}
                                if (item.status == "notDone")
                                    td Chưa tiến hành
                                td
                                    +formatDate(item.orderDate)
                                td 1k
                                td
                                    a(
                                        href=`${prefixAdmin}/staffs/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết 
                                    a(
                                        href=`${prefixAdmin}/staffs/edit/${item.id}`
                                        class="btn btn-warning btn-sm"
                                    ) Sửa
                                    button(
                                        class="btn btn-danger btn-sm"
                                        button-delete
                                        data-id=item.id
                                    ) Xóa 

        //- +pagination(pagination)

    .card.mb-3 
        .card-header Đơn hàng chưa xác định chi phí
        .card-body 
            table(
                    class="table table-hover table-sm"
                    checkbox-multi
                ) 
                    thead 
                        tr 
                            th  
                                input(type="checkbox" name="checkall")
                            th STT
                            th SĐT
                            th Loại yêu cầu
                            th Địa chỉ
                            th Trạng thái
                            th Ngày đặt yêu cầu
                            th Tổng chi phí
                            th Hoạt động
                    tbody
                        each item, index in undeterminedCost
                            tr 
                                td 
                                    input(type="checkbox" name="id" value=item.id)
                                td #{index + 1}
                                td #{item.customerInfo.phone}
                                if (item.requestType == "shortTerm")
                                    td Ngắn hạn 
                                else 
                                    td Dài hạn
                                td #{item.customerInfo.address}
                                td Chờ liên hệ
                                td
                                    +formatDate(item.orderDate)
                                td 1k
                                td
                                    a(
                                        href=`${prefixAdmin}/staffs/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết 
                                    a(
                                        href=`${prefixAdmin}/staffs/edit/${item.id}`
                                        class="btn btn-warning btn-sm"
                                    ) Sửa
                                    button(
                                        class="btn btn-danger btn-sm"
                                        button-delete
                                        data-id=item.id
                                    ) Xóa 

        //- +pagination(pagination)

        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/staffs/change-status`
        )

        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/staffs/delete`
        )
                        