extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)

    h1(class="mb-4") Thêm mới khu vực

    form(
        action=`${prefixAdmin}/locations/createProvince`
        method="POST"
    )
        div(class="form-group")
            label(for="province") Tên khu vực: *
            input(
                type="text"
                id="province"
                name="province"
                class="form-control"
                required
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
        