extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/formChangeMulti.pug
include ../../mixins/pagination.pug

block main 
    h1 Quản lý nhân viên 

    .card.mb-3 
        .card-header Bộ lọc và Tìm kiếm 
        .card-body 
            .row 
                .col-6
                    +filter-status(filterStatus)
                .col-6  
                    +search(keyword)
    
    .card.mb-3 
        .card-header Danh sách nhân viên
        .card-body 
            .row
                .col-8
                    +form-change-multi(`${prefixAdmin}/staffs/change-multi?_method=PATCH`)
                .col-4 
                    a(
                        href=`${prefixAdmin}/staffs/create`
                        class="btn btn-outline-success"
                    ) +Thêm mới
            
            table(
                    class="table table-hover table-sm"
                    checkbox-multi
                ) 
                    thead 
                        tr 
                            th  
                                input(type="checkbox" name="checkall")
                            th STT
                            th Hình ảnh
                            th Họ và tên
                            th Email
                            th Phân quyền
                            th Trạng thái
                            th Hoạt động
                    tbody
                        each item, index in staffs
                            tr 
                                td 
                                    input(type="checkbox" name="id" value=item.id)
                                td #{index + 1}
                                td  
                                    img(
                                        src=`${item.avatar}`
                                        alt=`${item.fullName}`
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.fullName}
                                td #{item.email}
                                td #{item.role_id}
                                td 
                                    if (item.status == "active")
                                        a(
                                            href="javascript:;" 
                                            button-change-status
                                            data-status=item.status
                                            data-id=item.id
                                            class="badge bg-success"
                                        ) Hoạt động
                                    else 
                                        a(
                                            href="javascript:;" 
                                            button-change-status
                                            data-status=item.status
                                            data-id=item.id
                                            class="badge bg-danger"
                                        ) Không hoạt động
                                td
                                    a(
                                        href=`${prefixAdmin}/products/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết 
                                    a(
                                        href=`${prefixAdmin}/products/edit/${item.id}`
                                        class="btn btn-warning btn-sm"
                                    ) Sửa
                                    button(
                                        class="btn btn-danger btn-sm"
                                        button-delete
                                        data-id=item.id
                                    ) Xóa 

        +pagination(pagination)

        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/staffs/change-status`
        )

        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/staffs/delete`
        )
                        